      "choices": [
        {
          "id": "pray",
          "label": {
            "en": "Pray at the shrine",
            "ru": "Помолиться у святилища"
          },
          "requirements": {
            "minBalance": 40
          },
          "consequences": {
            "resourceChanges": {"faith": 3},
            "balanceShift": 5,
            "anchorIntegrityChange": 10,
            "message": {
              "en": "Your prayers strengthen both faith and anchor.",
              "ru": "Ваши молитвы укрепляют и веру, и якорь."
            }
          }
        },
        {
          "id": "meditate",
          "label": {
            "en": "Meditate on the view",
            "ru": "Медитировать, любуясь видом"
