          "consequences": {
            "resourceChanges": {"faith": -5},
            "tensionChange": -3,
            "balanceShift": 5,
            "message": {
              "en": "Thunder god's blessing shields you. The storm's darkness diminishes.",
              "ru": "Благословение бога-громовержца защищает вас. Тьма бури рассеивается."
            }
          }
        }
      ]
    },
