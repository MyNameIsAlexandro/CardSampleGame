{
  "version": "1.0.0",
  "poolId": "pool_sacred",
  "description": "Sacred Oak region events",
  "events": [
    {
      "id": "event_oak_spirit",
      "title": {
        "en": "Spirit of the Oak",
        "ru": "Дух Дуба"
      },
      "body": {
        "en": "The great oak's spirit manifests - ancient beyond measure, guardian of the old ways.",
        "ru": "Дух великого дуба проявляется - древний без меры, хранитель старых обычаев."
      },
      "eventType": "inline",
      "poolIds": ["pool_sacred"],
      "availability": {
        "regionStates": ["stable"],
        "minPressure": 0,
        "maxPressure": 50
      },
      "weight": 15,
      "isOneTime": true,
      "choices": [
        {
          "id": "commune",
          "label": {
            "en": "Commune with the spirit (5 Faith)",
            "ru": "Пообщаться с духом (5 Веры)"
          },
          "requirements": {
            "minFaith": 5,
            "minBalance": 50
          },
          "consequences": {
            "resourceChanges": {"faith": -5},
            "balanceShift": 10,
            "setFlags": {"oak_spirit_blessing": true},
            "addCards": ["oak_blessing"],
            "message": {
              "en": "The spirit shares its blessing - a card of ancient power.",
              "ru": "Дух дарует своё благословение - карту древней силы."
            }
          }
        },
        {
          "id": "offer",
          "label": {
            "en": "Make an offering (3 Faith)",
            "ru": "Сделать подношение (3 Веры)"
          },
          "consequences": {
            "resourceChanges": {"faith": -3},
            "anchorIntegrityChange": 10,
            "message": {
              "en": "Your offering strengthens the oak's protective aura.",
              "ru": "Ваше подношение укрепляет защитную ауру дуба."
            }
          }
        },
        {
          "id": "observe",
          "label": {
            "en": "Simply observe",
            "ru": "Просто наблюдать"
          },
          "consequences": {
            "setFlags": {"witnessed_oak_spirit": true},
            "message": {
              "en": "You witness something few mortals ever see.",
              "ru": "Вы становитесь свидетелем того, что мало кто из смертных когда-либо видел."
            }
          }
        }
      ]
    },
    {
      "id": "event_veles_vision",
      "title": {
        "en": "Veles' Vision",
        "ru": "Видение Велеса"
      },
      "body": {
        "en": "The god of the underworld sends you a vision of the darkness to come.",
        "ru": "Бог подземного мира посылает вам видение грядущей тьмы."
      },
      "eventType": "inline",
      "poolIds": ["pool_sacred"],
      "availability": {
        "regionStates": ["stable", "borderland"],
        "minPressure": 20,
        "maxPressure": 70
      },
      "weight": 8,
      "isOneTime": true,
      "choices": [
        {
          "id": "accept_vision",
          "label": {
            "en": "Accept the vision",
            "ru": "Принять видение"
          },
          "requirements": {
            "minBalance": 40
          },
          "consequences": {
            "resourceChanges": {"health": -1},
            "setFlags": {"veles_vision_seen": true, "knows_dark_lowland": true},
            "message": {
              "en": "The vision burns into your mind - you now know where the Dark Lowland lies.",
              "ru": "Видение выжигается в вашем разуме - теперь вы знаете, где лежит Тёмная Низина."
            }
          }
        },
        {
          "id": "reject_vision",
          "label": {
            "en": "Reject the dark knowledge",
            "ru": "Отвергнуть тёмное знание"
          },
          "consequences": {
            "balanceShift": -5,
            "message": {
              "en": "You refuse the gift. Veles' displeasure is palpable.",
              "ru": "Вы отказываетесь от дара. Недовольство Велеса ощутимо."
            }
          }
        }
      ]
    }
  ]
}
